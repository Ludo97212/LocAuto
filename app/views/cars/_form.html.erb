<div class="container">
  <%= simple_form_for @car do |f| %>
    <%= f.input :brand %>
    <%= f.input :model %>
    <%= f.input :year_of_production %>
    <%= f.input :address,
      input_html: { data: { geocoder_target: "address" } },
      wrapper_html: { data: { controller: "geocoder",
      geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } }%>
    <%= f.input :price_per_day %>
    <%= f.input :photo, as: :file %>
    <%= f.submit %>
    <% end %>
</div>
