<div class="banner">
  <div class="heading">
    <%= form_tag cars_path, method: :get do %>
      <%= text_field_tag :query, params[:query], placeholder: "marque/modèle/adresse" %>
      <button class="icon"><i class="fa fa-search"></i></button>
    <% end %>
    <h1>LOC'AUTO</h1>
    <%= link_to "Ajouter votre voiture", new_car_path, class: "btn btn-light" %>
  </div>
</div>

<div class="container">
  <div class="index-grid">
    <% @cars.each do |car| %>
      <div class="card-trip">
        <% if car.photo.attached? %>
          <%= cl_image_tag car.photo.key %>
        <% else %>
          <%= image_tag "default_car.png"%>
        <% end %>
        <div class="card-trip-infos">
          <div>
            <%= car.address %>
            <h4><%= link_to car.brand, car_path(car) %> <%= link_to car.model, car_path(car) %></h4>
          </div>
          <h2 class="card-trip-pricing"><%= car.price_per_day %>€/jour</h2>
        </div>
      </div>
    <% end %>
  </div>
</div>
